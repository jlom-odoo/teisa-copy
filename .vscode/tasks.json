    "version": "2.0.0",
    "tasks": [
        {
            "label": "dropdb",
            "type": "shell",
            "command": "if (psql -l | grep -q teisa_test_empty); then dropdb teisa_test_empty; fi"
        },
        {
            "label": "mailcatcher",
            "type": "shell",
            "command": "[[ $(pgrep -c -f mailcatcher) -eq $((2)) ]] || mailcatcher"
        },
        {
            "label": "odoo_empty",
            "dependsOn": [
                "mailcatcher",
                "dropdb"
            ]
        }
    ]
}