<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_teisa_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="name">stock.picking.teisa.form</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="after">
                <field name="price_unit" attrs="{'invisible': [('picking_code', 'not in', ['outgoing'])]}"/>
                <field name="subtotal" attrs="{'invisible': [('picking_code', 'in', ['incoming', 'internal'])]}"/>
            </xpath>
            <xpath expr="//page[@name='operations']" position="inside">
                <group name="note_group" col="6" class="mt-2 mt-md-0">
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="move total">
                        <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>
                    </group>
                    <div class="clearfix"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
