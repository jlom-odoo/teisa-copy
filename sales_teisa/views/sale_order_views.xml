<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit.teisa</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_uom']" position="after">
                <field name="delivery_time_teisa"/>
            </xpath>
            <xpath expr="//tree/field[@name='discount']" position="after">
                <field name="discount_over_limit_allowed"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="sale_under_margin_allowed"/>
                <field name="sale_on_debt_allowed"/>
            </xpath>
        </field>
    </record>
</odoo>
