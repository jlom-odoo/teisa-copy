<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_date_adjust" model="base.automation">
        <field name="name">Accounting and Bill Date for Vendor Bills</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="code">
for record in records:
    record['date'] = record.invoice_date
        </field>
        <field name="trigger">on_create_or_write</field>
        <field name="active" eval="True"/>
        <field name="filter_domain">["&#38;",('state', '=', 'draft'), ('invoice_date', '!=', False), '|', ('move_type', '=', 'in_invoice'), ('move_type', '=', 'in_refund')]</field>
     </record>
</odoo>
